#!/bin/bash
USERNAME="_dev"
PASSWORD="password"

if echo "
import sys;
from django.contrib.auth import get_user_model;
try:
    obj = get_user_model().objects.create_superuser('$USERNAME', 'local_dev@blanc.ltd.uk', '$PASSWORD');
except:
    sys.exit(1);
" | python manage.py shell; then
    echo
    echo
    echo "Created new superuser: "
    echo
    echo "    $USERNAME:$PASSWORD"
else
    echo
    echo
    echo "Superuser $USERNAME already existed: "
    echo
    echo "    $USERNAME:$PASSWORD"
fi
echo
